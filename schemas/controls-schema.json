{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "shared-controls": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "reference-id": {
              "type": "string",
              "description": "Reference ID for the shared control set, e.g., 'CCC'"
            },
            "identifiers": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^CCC\\.C\\d{2,8}$",
                "description": "ID of a generic control that is designed to be shared by multiple catalogs"
              }
            }
          },
          "required": ["reference-id", "identifiers"],
          "additionalProperties": false
        }
      },
      "control-families": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the control family (e.g., 'Data')"
            },
            "description": {
              "type": "string",
              "description": "Short description of the control family"
            },
            "controls": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^CCC\\.[A-Za-z]+\\.C\\d{2,8}$",
                    "description": "Full control ID (e.g., CCC.ObjStor.C01)"
                  },
                  "title": {
                    "type": "string",
                    "description": "Title of the control"
                  },
                  "objective": {
                    "type": "string",
                    "description": "Multi-line objective of the control"
                  },
                  "requirements": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "Test requirement ID"
                        },
                        "text": {
                          "type": "string",
                          "description": "Detailed description of the requirement"
                        },
                        "applicability": {
                          "type": "array",
                          "items": {
                            "type": "string",
                            "enum": ["tlp-clear", "tlp-green", "tlp-amber", "tlp-red"]
                          }
                        },
                        "recommendation": {
                          "type": "string",
                          "description": "Optional recommendation to satisfy this requirement"
                        }
                      },
                      "required": ["id", "text", "applicability", "recommendation"],
                      "additionalProperties": false
                    }
                  },
                  "threat-mappings": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "reference-id": {
                          "type": "string"
                        },
                        "identifiers": {
                          "type": "array",
                          "items": {
                            "type": "string",
                            "pattern": "^((CCC\\.TH\\d{2,8})|(CCC\\.\\w{1,8}\\.TH\\d{2,8}))$"
                          }
                        }
                      },
                      "required": ["reference-id", "identifiers"],
                      "additionalProperties": false
                    }
                  },
                  "guideline-mappings": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "reference-id": {
                          "type": "string"
                        },
                        "identifiers": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "required": ["reference-id", "identifiers"],
                      "additionalProperties": false
                    }
                  }
                },
                "required": ["id", "title", "objective", "requirements", "threat-mappings", "guideline-mappings"],
                "additionalProperties": false
              }
            }
          },
          "required": ["name", "description"],
          "additionalProperties": false
        }
      }
    },
    "required": ["control-families"],
    "additionalProperties": false
}
