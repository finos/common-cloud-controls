{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern":"^CCC\\.\\w{1,8}$",
          "description": "Unique identifier for the control catalog"
        },
        "title": {
          "type": "string",
          "description": "Name of the control catalog"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "last-modified": {
          "type": "string",
          "format": "date-time"
        },
        "category": {
          "id": {
            "type": "string",
            "pattern":"^CCC\\.\\w{1,8}$",
            "description": "Unique identifier for the category of the control catalog"
          },
          "name": {
            "type": "string",
            "description": "Name of the category of the control catalog"
          }
        },
        "applicability-categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["id", "title", "description"],
            "additionalProperties": false
          }
        },
        "mapping-references": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "version": { "type": "string" },
              "description": { "type": "string" },
              "url": { "type": "string" }
            },
            "required": ["id", "version"],
            "additionalProperties": false
          }
        },
        "example-csp-services": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "provider": { "type": "string" },
              "service": { "type": "string" },
              "url": { "type": "string" }
            },
            "description": "Provides non-normative references to CSP-native servicesls. Inclusion in this list does not imply compliance with CCC.",
            "required": ["provider", "service"],
            "additionalProperties": false
          }
        }
      },
      "required": ["id", "title", "description"],
      "additionalProperties": false
    },
    "release-details": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": { "type": "string" },
          "assurance_level": { "type": ["string", "null"] },
          "threat_model_url": { "type": ["string", "null"] },
          "threat_model_author": { "type": ["string", "null"] },
          "red_team": { "type": ["string", "null"] },
          "red_team_exercise_url": { "type": ["string", "null"] },
          "release_manager": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "github_id": { "type": "string" },
              "company": { "type": "string" },
              "summary": { "type": "string" }
            },
            "required": ["name", "github_id", "company", "summary"],
            "additionalProperties": false
          },
          "change_log": {
            "type": "array",
            "items": { "type": "string" }
          },
          "contributors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "github_id": { "type": "string" },
                "company": { "type": "string" }
              },
              "required": ["name", "github_id", "company"],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["metadata"],
  "additionalProperties": false
}
