{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "imported-threats": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reference-id": {
            "type": "string",
            "description": "The shared threat namespace or category identifier (e.g., CCC)"
          },
          "entries": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reference-id": {
                  "type": "string",
                  "pattern": "^CCC\\.Core.TH\\d{2,8}$",
                  "description": "Global threat identifiers"
                },
                "strength": {
                  "type": "integer"
                },
                "remarks": {
                  "type": "string"
                }
              },
              "required": ["reference-id", "strength"],
              "additionalProperties": false
            }
          },
          "remarks": {
            "type": "string"
          }
        },
        "required": ["reference-id", "entries"],
        "additionalProperties": false
      }
    },
    "threats": {
      "type": "array",
      "description": "List of service-specific or global threats",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^((CCC\\.TH\\d{2,8})|(CCC\\.\\w{1,8}\\.TH\\d{2,8}))$",
            "description": "Threat ID (global or service-specific)"
          },
          "title": {
            "type": "string",
            "description": "Short title of the threat"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the threat"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reference-id": {
                  "type": "string",
                  "description": "Capability mapping namespace (e.g., CCC)"
                },
                "entries": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "reference-id": {
                        "type": "string",
                        "pattern": "^CCC(\\.[a-zA-Z0-9]+)?\\.F\\d+$",
                        "description": "Feature/Capability ID"
                      },
                      "strength": {
                        "type": "integer"
                      },
                      "remarks": {
                        "type": "string"
                      }
                    },
                    "required": ["reference-id"],
                    "additionalProperties": false
                  }
                },
                "remarks": {
                  "type": "string"
                }
              },
              "required": ["reference-id", "entries"],
              "additionalProperties": false
            }
          },
          "external-mappings": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "reference-id": {
                  "type": "string",
                  "description": "Framework name (e.g., MITRE-ATT&CK)"
                },
                "entries": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "reference-id": {
                        "type": "string",
                        "description": "Mapping identifier (e.g., MITRE technique ID)"
                      },
                      "strength": {
                        "type": "integer"
                      },
                      "remarks": {
                        "type": "string"
                      }
                    },
                    "required": ["reference-id"],
                    "additionalProperties": false
                  }
                },
                "remarks": {
                  "type": "string"
                }
              },
              "required": ["reference-id", "entries"],
              "additionalProperties": false
            }
          }
        },
        "required": ["id", "title", "description", "capabilities", "external-mappings"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}