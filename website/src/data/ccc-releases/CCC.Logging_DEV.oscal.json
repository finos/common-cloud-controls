            ],
            "parts": [
              {
                "class": "CCC.Logging.C05",
                "id": "CCC.Logging.C05.TR01",
                "name": "CCC.Logging.C05.TR01",
                "parts": [
                  {
                    "id": "CCC.Logging.C05.TR01.R",
                    "links": [
                      {
                        "href": "https://example.com/releases/DEV#CCC.Logging.C05.TR01",
                        "rel": "canonical"
                      }
                    ],
                    "name": "recommendation",
                    "ns": "https://github.com/ossf/gemara/ns/oscal",
                    "prose": "Configure bucket policies and access control lists (ACLs) to restrict public access.\nRegularly review bucket permissions to ensure no public access has been inadvertently granted.\n"
                  }
                ],
                "prose": "When a log storage bucket is created, the bucket's access control settings MUST\nexplicitly deny public read and write access.\n"
              },
              {
                "class": "CCC.Logging.C05",
                "id": "CCC.Logging.C05.TR02",
                "name": "CCC.Logging.C05.TR02",
                "parts": [
                  {
                    "id": "CCC.Logging.C05.TR02.R",
